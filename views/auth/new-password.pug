extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/auth.css")

block content
  main
    if (errorMessage)
      .user-message.user-message--error #{ errorMessage }

    form.login-form(action="/new-password", method="POST")
      input(name="_csrf", type="hidden", value=csrfToken)
      input(name="userId", type="hidden", value=userId)
      input(name="passwordToken", type="hidden", value=passwordToken)

      .form-control
        label(for="password") Password
        input#password(type="text", name="password")

      button.btn(type="submit") Update Password

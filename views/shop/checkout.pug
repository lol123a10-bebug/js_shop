extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")

block content
  main
    ul.cart__item-list
      each product in products
        li.cart__item
          h1= product.productId.title
          h2 Quantity: #{ product.quantity }
    .centered
      h2 Total: $#{ totalSum }
